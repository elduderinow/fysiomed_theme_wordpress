{% extends "base.twig" %}

{% block content %}
	<div class="bg--white page-single page--wp-login">
		<div class="max-width px-6">
			<div class="grid grid-cols-12 space-y-28 py-32">
				<div class="col-span-12 md:col-span-10 md:col-start-2 lg:col-span-6 lg:col-start-4">
					<form class="wp-login-form" name="loginform" id="loginform" action="/wp/wp-login.php?action=lostpassword" method="post">
						<div class="login-item">
							<label for="user_login">{{__('Gebruikersnaam of e-mailadres')}}</label>
							<input type="text" name="user_login" id="user_login" class="input" value="" size="20" autocapitalize="off" autocomplete="username" required="required">
						</div>
						<input type="submit" name="wp-submit" id="wp-submit" class="button--main button__primary" value="Inloggen"/>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
